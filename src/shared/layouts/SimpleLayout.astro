---
export interface Props {
  title?: string;
}

const { title = "Bem-vindo" } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-BR" data-theme="defaultTheme">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="Um boilerplate simples em Astro" />
  </head>
  <body class="bg-gray-900 text-white min-h-screen flex flex-col items-center justify-center p-6">
    <slot />
  </body>
</html>
