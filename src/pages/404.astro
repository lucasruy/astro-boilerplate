---
import SimpleLayout from "../shared/layouts/SimpleLayout.astro";

import { Button } from "@/shared/components/react";
---

<SimpleLayout
  title="Página não encontrada | Astro Boilerplate"
  description="A página que você está procurando não foi encontrada."
>
  <section class="bg-white dark:bg-gray-900 ">
    <div class="container flex items-center min-h-screen px-6 py-12 mx-auto">
      <div>
        <p class="text-sm font-medium text-blue-500 dark:text-blue-400">404</p>
        <h1 class="mt-3 text-2xl font-semibold text-gray-800 dark:text-white md:text-3xl">Nós não conseguimos encontrar a página</h1>
        <p class="mt-4 text-gray-500 dark:text-gray-400">Desculpe, a página que você está procurando não existe ou foi movida.</p>

        <div class="flex items-center mt-6 gap-x-3" role="group" aria-label="Botões de navegação">
          <Button client:only="react" variant="ghost" iconName="badge-help" iconPosition="left" href="/">
            Voltar
          </Button>
          <Button client:only="react" variant="primary" iconName="home" iconPosition="left">
            Pagina inicial
          </Button>
        </div>
      </div>
    </div>
  </section>
</SimpleLayout>
