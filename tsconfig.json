{
  "extends": "./node_modules/astro/tsconfigs/base.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["@types/react", "@types/react-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.astro", "src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["dist"]
}
